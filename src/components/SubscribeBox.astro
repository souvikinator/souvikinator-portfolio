---
// Replace with your actual MailerLite form action URL
const MAILERLITE_FORM_ACTION = 'https://YOUR_MAILERLITE_FORM_URL'
import { BellPlus, X } from 'lucide-react'
---

<!-- Floating Subscribe Box (Desktop) -->
<form
  action={MAILERLITE_FORM_ACTION}
  method="post"
  target="_blank"
  class="fixed bottom-6 right-6 z-40 hidden w-80 min-w-[250px] flex-col gap-2 rounded-lg border border-border bg-background p-4 shadow-lg md:flex"
  style="backdrop-filter: blur(4px);"
>
  <span class="text-base font-semibold text-foreground"
    >Get new posts & project updates in your inbox</span
  >
  <div class="relative w-full">
    <input
      type="email"
      name="email"
      required
      placeholder="Your email"
      class="bg-card w-full rounded-md border border-border px-4 py-2 pr-10 text-sm text-foreground shadow-sm transition-shadow focus:shadow-md focus:outline-none focus:ring-2 focus:ring-primary"
    />
    <svg
      class="absolute right-3 top-1/2 -translate-y-1/2 text-muted-foreground"
      width="20"
      height="20"
      fill="none"
      stroke="currentColor"
      stroke-width="1.5"
      viewBox="0 0 24 24"
      ><path d="M4 4h16v16H4z" stroke="none"></path><path
        d="M22 6.5V17a2.5 2.5 0 01-2.5 2.5h-15A2.5 2.5 0 012 17V6.5M22 6.5A2.5 2.5 0 0019.5 4h-15A2.5 2.5 0 002 6.5m20 0l-10 7-10-7"
      ></path></svg
    >
  </div>
  <button
    type="submit"
    class={'w-full mt-2 ' +
      (await import('@/components/ui/button')).buttonVariants({
        variant: 'default',
      })}
  >
    Subscribe
  </button>
</form>

<!-- Floating Bell Button (Mobile) -->
<button
  type="button"
  class="fixed bottom-6 right-6 z-40 flex items-center justify-center rounded-full bg-primary p-4 text-primary-foreground shadow-lg md:hidden"
  aria-label="Subscribe"
  onclick="document.getElementById('subscribe-modal').showModal()"
>
  <BellPlus />
</button>

<!-- Modal Backdrop -->
<style>
  dialog[open]::backdrop {
    background: rgba(0, 0, 0, 0.35);
    backdrop-filter: blur(2px);
  }
</style>

<!-- Modal for Mobile -->
<dialog id="subscribe-modal" class="z-50 w-11/12 max-w-sm rounded-lg p-0">
  <form
    action={MAILERLITE_FORM_ACTION}
    method="post"
    target="_blank"
    class="flex flex-col gap-3 rounded-lg border border-border bg-background p-6"
    onsubmit="this.closest('dialog').close()"
  >
    <span class="text-base font-semibold text-foreground"
      >Get new posts & project updates in your inbox</span
    >
    <div class="relative w-full">
      <input
        type="email"
        name="email"
        required
        placeholder="Your email"
        class="bg-card w-full rounded-md border border-border px-4 py-2 pr-10 text-sm text-foreground shadow-sm transition-shadow focus:shadow-md focus:outline-none focus:ring-2 focus:ring-primary"
      />
      <svg
        class="absolute right-3 top-1/2 -translate-y-1/2 text-muted-foreground"
        width="20"
        height="20"
        fill="none"
        stroke="currentColor"
        stroke-width="1.5"
        viewBox="0 0 24 24"
        ><path d="M4 4h16v16H4z" stroke="none"></path><path
          d="M22 6.5V17a2.5 2.5 0 01-2.5 2.5h-15A2.5 2.5 0 012 17V6.5M22 6.5A2.5 2.5 0 0019.5 4h-15A2.5 2.5 0 002 6.5m20 0l-10 7-10-7"
        ></path></svg
      >
    </div>
    <button
      type="submit"
      class={'w-full mt-2 ' +
        (await import('@/components/ui/button')).buttonVariants({
          variant: 'default',
        })}
    >
      Subscribe
    </button>
    <button
      type="button"
      class={'w-full mt-2 ' +
        (await import('@/components/ui/button')).buttonVariants({
          variant: 'ghost',
        })}
      onclick="this.closest('dialog').close()"
    >
      Cancel
    </button>
  </form>
</dialog>

<div id="newsletter-success" class="fixed bottom-6 right-6 z-40 hidden w-80 min-w-[250px] flex-col gap-2 rounded-lg border border-border bg-background p-4 shadow-lg">
  <div class="flex items-center justify-between">
    <span class="text-base font-semibold text-foreground">Thanks for subscribing! ðŸŽ‰</span>
    <button 
      onclick="this.closest('div').classList.add('hidden'); document.cookie = 'newsletter=subscribed; path=/; max-age=31536000;';"
      class="rounded-full p-1 hover:bg-muted"
      aria-label="Close"
    >
      <X className="h-4 w-4" />
    </button>
  </div>
  <p class="text-sm text-muted-foreground">You'll receive new posts in your inbox.</p>
</div>

<script>
  // Handle success message and cookie
  document.addEventListener('astro:page-load', () => {
    const forms = document.querySelectorAll('form[action*="mailerlite"]');
    const subscribeBtn = document.querySelector('button[aria-label="Subscribe"]');
    const successEl = document.getElementById('newsletter-success');
    const subscribeBox = document.querySelector('form.fixed.md\\:flex');
    
    // Check if already subscribed
    if (document.cookie.includes('newsletter=subscribed')) {
      if (subscribeBox) subscribeBox.classList.add('hidden');
      if (subscribeBtn) subscribeBtn.classList.add('hidden');
      return;
    }

    forms.forEach(form => {
      form.addEventListener('submit', (e) => {
        // Show success message after short delay
        setTimeout(() => {
          if (successEl) {
            successEl.classList.remove('hidden');
            // Hide subscribe components
            if (subscribeBox) subscribeBox.classList.add('hidden');
            if (subscribeBtn) subscribeBtn.classList.add('hidden');
          }
        }, 1000);
      });
    });
  });

  // Handle blog page positioning
  document.addEventListener('astro:page-load', () => {
    const blogPage = document.body.classList.contains('blog');
    const subscribeBox = document.querySelector('form.fixed.md\\:flex');
    const successEl = document.getElementById('newsletter-success');

    if (blogPage && successEl && !successEl.classList.contains('hidden')) {
      const offset = successEl.offsetHeight + 24; // 24px for margin
      document.body.style.paddingBottom = `${offset}px`;
    }
  });
</script>
